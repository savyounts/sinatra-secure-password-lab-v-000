<h1>Welcome</h1>

<p>We are currently working on your account.</p>
<% if !@user.withdrawl(params[:withdrawl]) %>
  <p>You do not have enough money to withdrawl</p>
  <% end %>
<form action="/account" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="integer" name="withdrawl" placeholder="withdrawl amount"/>
  <input type="submit" value="withdrawl"/>
</form>

<form action="/account" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="integer" name="deposit" placeholder="deposit amount"/>
  <input type="submit" value="deposit"/>
</form>

<p>Your balance is $<%= @user.balance %></p>


<p><a href="/logout">Log Out</a></p>
